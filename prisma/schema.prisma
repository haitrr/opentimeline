generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model LocationPoint {
  id         Int      @id @default(autoincrement())
  lat        Float
  lon        Float
  tst        Int
  recordedAt DateTime
  acc        Float?
  batt       Int?
  tid        String?
  alt        Float?
  vel        Float?
  cog        Float?
  trigger    String?
  username   String?
  deviceId   String?

  @@index([recordedAt])
  @@index([username, deviceId, recordedAt])
}

model Place {
  id        Int      @id @default(autoincrement())
  name      String
  lat       Float
  lon       Float
  radius    Float    @default(50)
  createdAt DateTime @default(now())
  visits    Visit[]
}

model Visit {
  id          Int      @id @default(autoincrement())
  placeId     Int
  place       Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  arrivalAt   DateTime
  departureAt DateTime
  status      String   @default("suggested")
  pointCount  Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([placeId])
  @@index([status])
  @@index([placeId, status])
  @@index([arrivalAt])
  @@index([departureAt])
}

model UnknownVisitSuggestion {
  id          Int      @id @default(autoincrement())
  lat         Float
  lon         Float
  arrivalAt   DateTime
  departureAt DateTime
  pointCount  Int      @default(0)
  status      String   @default("suggested")
  createdAt   DateTime @default(now())

  @@index([status])
  @@index([arrivalAt])
  @@index([departureAt])
}

model AppSettings {
  id                      Int @id @default(1)
  sessionGapMinutes       Int @default(15)
  minDwellMinutes         Int @default(15)
  postDepartureMinutes    Int @default(15)
  unknownClusterRadiusM   Int @default(50)
  unknownSessionGapMinutes Int @default(15)
  unknownMinDwellMinutes  Int @default(15)
}
