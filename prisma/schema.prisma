generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model LocationPoint {
  id         Int      @id @default(autoincrement())
  lat        Float
  lon        Float
  tst        Int
  recordedAt DateTime
  acc        Float?
  batt       Int?
  tid        String?
  alt        Float?
  vel        Float?
  cog        Float?
  trigger    String?
  username   String?
  deviceId   String?

  @@index([recordedAt])
  @@index([username, deviceId, recordedAt])
}
