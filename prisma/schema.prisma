generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model LocationPoint {
  id         Int      @id @default(autoincrement())
  lat        Float
  lon        Float
  tst        Int
  recordedAt DateTime
  acc        Float?
  batt       Int?
  tid        String?
  alt        Float?
  vel        Float?
  cog        Float?
  trigger    String?
  username   String?
  deviceId   String?

  @@index([recordedAt])
  @@index([username, deviceId, recordedAt])
}

model Place {
  id        Int      @id @default(autoincrement())
  name      String
  lat       Float
  lon       Float
  radius    Float    @default(50)
  createdAt DateTime @default(now())
  visits    Visit[]
}

model Visit {
  id          Int      @id @default(autoincrement())
  placeId     Int
  place       Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  arrivalAt   DateTime
  departureAt DateTime
  status      String   @default("suggested")
  createdAt   DateTime @default(now())

  @@index([placeId])
  @@index([status])
}
